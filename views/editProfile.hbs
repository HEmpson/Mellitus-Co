<head>
    <link rel="stylesheet" href="/css/profile.css">
</head>
<!-- The Froms to edit profile -->
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- change name -->
            <form action="#" method="POST" enctype="multipart/form-data">
                <div>
                    <label for="newName">New Name</label>
                    <input id="newName" type="text" name="newName" value={{user.displayName}}>
                    <button type="submit">Change</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <!-- change profile image -->
            <form action="#" method="POST" enctype="multipart/form-data">
                <div>
                    <label for="profileImg">New Profile Image</label>
                    <input id="profileImg" type="file" name="profileImg">
                    <button type="submit">Change</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <!-- change status -->
            <form action="#" method="POST" enctype="multipart/form-data">
                <div>
                    <label for="newStatus">New Status</label>
                    <textarea id="newStatus" name="newStatus">{{user.status}}</textarea>
                    <button type="submit">Change</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <!-- change description -->
            <form action="#" method="POST">
                <div>
                    <label for="newDescription">New Description</label>
                    <textarea id="newDescription" name="newDescription">{{user.description}}</textarea>
                    <button type="submit">Change</button>
                </div>
            </form>
        </div>
    </div>
</div>